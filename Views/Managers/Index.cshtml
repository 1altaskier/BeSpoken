@model IEnumerable<BeSpoken.Models.Manager>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Managers</h2>

<p>
    <button onclick="location.href='@Url.Action("Create", "Managers")';return false;" class="btn btn-default">New Manager</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.Raw("Manager Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ManagerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ManagerId })
        </td>
    </tr>
}

</table>
